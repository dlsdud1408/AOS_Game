<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/userChoiceImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_launcher_foreground"
            android:contentDescription="User's Choice" />

        <TextView
            android:id="@+id/userChoiceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:paddingStart="8dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/resultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Choose: "
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/rockButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rock"
        android:layout_gravity="center_horizontal"
        android:onClick="onChoiceSelected"/>

    <Button
        android:id="@+id/paperButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paper"
        android:layout_gravity="center_horizontal"
        android:onClick="onChoiceSelected"/>

    <Button
        android:id="@+id/scissorsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scissors"
        android:layout_gravity="center_horizontal"
        android:onClick="onChoiceSelected"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/computerChoiceImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_launcher_foreground"
            android:contentDescription="Computer's Choice" />

        <TextView
            android:id="@+id/computerChoiceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Computer"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:paddingStart="8dp" />
    </LinearLayout>

</LinearLayout>
